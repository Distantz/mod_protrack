    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Build",
            "type": "debugpy",
            "request": "launch",
            "program": "./Build/build.py",
            "args": [
                "${env:COBRATOOLS}",
                "./Manifest.xml"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "Package Build",
            "type": "debugpy",
            "request": "launch",
            "program": "./Build/package.py",
            "args": [
                ".",
                "${workspaceFolderBasename}.zip"
            ],
            "console": "integratedTerminal",
        }
    ]
}